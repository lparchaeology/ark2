{
    "site": "site",
    "debug": true,
    "locale": {
        "default": "en",
        "active": ["en"],
        "fallbacks": ["en"],
        "timezone": "UTC"
    },
    "spatial": {
        "driver": "mysql"
    },
    "mailer": {
        "enabled": false,
        "use_spool": true,
        "sender": {
            "address": "noreply@example.com",
            "name": "ARK (Do Not Reply)"
        },
        "delivery": {
            "addresses": ["dev@example.com"],
            "whitelist": []
        },
        "options": {
            "host": "localhost",
            "port": 25,
            "encryption": null,
            "auth_mode": null
        }
    },
    "file": {
        "max_file_size": 5120,
        "root": "/files",
        "data": {
            "adapter": "Local",
            "path": "/data"
        },
        "cache": {
            "adapter": "Local",
            "path": "/cache"
        }
    },
    "image": {
        "driver": "gd",
        "max_image_size": 4000000,
        "presets": {
            "icon": { "w": 32, "h": 32 },
            "thumb": { "w": 100, "h": 100 },
            "preview": { "w": 500, "h": 500 }
        }
    },
    "view": {
        "frontend": "ark2",
        "renderer": {
            "pdf": "vendor/h4cc/bin/wkhtmltopdf-amd64/bin/wkhtmltopdf-amd64",
            "image": "vendor/h4cc/bin/wkhtmltoimage-amd64/bin/wkhtmltoimage-amd64"
        },
        "recaptcha": {
            "locale_key": "en",
            "enabled": false,
            "verify_host": true,
            "ajax": true
        }
    },
    "security": {
        "anonymous": true,
        "https": false,
        "access_rules": [
            ["(^/users)", "ROLE_USER"],
            ["^/.+$", "IS_AUTHENTICATED_ANONYMOUSLY"]
        ],
        "remember_me": {
            "always_remember_me": false,
            "key": null,
            "name": "REMEMBERME",
            "lifetime": 31536000,
            "path": "/",
            "domain": null,
            "secure": false,
            "httponly": true,
            "remember_me_parameter": "_remember_me"
        },
        "user": {
            "admin_confirm": false,
            "verify_email": true,
            "verify_email_required": true,
            "email": "noreply@example.com",
            "sender": "ARK User Admin (Do Not Reply)",
            "reset_email_template": "user/emails/reset.txt.twig",
            "verify_email_template": "user/emails/verify.txt.twig",
            "password_strength": 2,
            "password_expiry": 0,
            "user_reset": true,
            "user_register": true,
            "default_role": "anonymous",
            "reset_ttl": 86400
        }
    }
}
