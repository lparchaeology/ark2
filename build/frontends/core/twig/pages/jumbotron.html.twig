{# Define the standard page layout, extend the base Bootstrap page #}
{% extends "bootstrap.html.twig" %}

{% block head -%}

    <title> {{- 'site.brand' | translate }} </title>

{%- endblock head %}

{% block body -%}

<div class="container-fluid" role="main">

    <div class="row">
        {{ page.navbar.renderView(data) }}
    </div>

    <div class="row">

        <div class="col-md-1 sidebar">
            {{ page.sidebar.renderView(data) }}
        </div>

        <div class="jumbotron">
            {{ page.content.renderView(data, form) }}
        </div>

    </div>

    <div class="row">
        {{ page.footer.renderView(data) }}
    </div>

</div>

{%- endblock body %}
