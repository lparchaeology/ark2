{# Standard table layout using only HTML5/Bootstrap #}
<div>

    <h3>Table Layout</h3>

    {% set table_class %}
        table
        {%- if layout.striped %} table-striped {%- endif -%}
        {%- if layout.bordered %} table-bordered {%- endif -%}
        {%- if layout.hover %} table-hover {%- endif -%}
        {%- if layout.condensed %} table-condensed {%- endif -%}
    {% endset %}

    <table id="{{layout.id}}" class="{{table_class}}">

        <thead>
            <tr>
                {% for field in layout.fields %}
                    <th>
                        {{field.title|translate}}
                    </th>
                {% endfor %}
            </tr>
        </thead>

        <tbody>
            {% for item in items %}
                <tr>
                    {% for field in layout.fields %}
                        <td>
                            {% block fieldvalue %}{% endblock %}
                        </td>
                    {% endfor %}
                </tr>
            {% endfor %}
        </tbody>

    </table>

</div>
