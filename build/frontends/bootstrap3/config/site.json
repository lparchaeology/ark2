{
    "site": "",
    "debug": true,
    "locale": {
        "default": "en",
        "locales": ["en"],
        "timezone": "UTC"
    },
    "spatial": {
        "driver": "mysql"
    },
    "file": {
        "root": "/files",
        "data": {
            "adapter": "Local",
            "path": "/data"
        },
        "cache": {
            "adapter": "Local",
            "path": "/cache"
        }
    },
    "image": {
        "driver": "gd",
        "max_image_size": 4000000,
        "presets": {
            "thumb": { "w": 100, "h": 100 },
            "preview": { "w": 500, "h": 500 }
        }
    },
    "view": {
        "renderer": {
            "pdf": "/usr/bin/xvfb-run /usr/bin/wkhtmltopdf",
            "image": "/usr/bin/xvfb-run /usr/bin/wkhtmltoimage"
        },
        "recaptcha": {
            "locale_key": "en",
            "enabled": false,
            "verify_host": true,
            "ajax": true
        }
    },
    "api": {
        "enable": true,
        "path": "/api/v2"
    },
    "web": {
        "enable": true,
        "frontend": "bootstrap"
    },
    "routes": {
        "/api/v2": "ARK\\Routing\\ApiControllerProvider",
        "/": "ARK\\Routing\\ViewControllerProvider"
    },
    "security": {
        "access_rules": [
            ["(^/home)|(^/users)$)", "ROLE_USER"],
            ["^/.+$", "IS_AUTHENTICATED_ANONYMOUSLY"]
        ],
        "user": {
            "adminConfirm": true,
            "verifyEmail": true,
            "emailAddress": "noreply@example.com",
            "emailName": "ARK User Admin (Do Not Reply)",
            "passwordStrength": 2,
            "userReset": true,
            "resetTTL": 86400
        },
        "user_paths": {
            "en": {
                "root": "/users",
                "login": "/users/login",
                "check": "/users/check",
                "target": "/",
                "logout": "/users/logout",
                "register": "/users/register",
                "reset": "/users/reset"
            }
        }
    }
}
