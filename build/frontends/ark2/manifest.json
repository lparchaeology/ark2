{
    "frontend": "ark2",
    "namespace": "ARK",
    "options": {
        "uglify": {
            "compress": false
        },
        "sass": {
            "outputStyle": "compressed",
            "precision": 8,
            "includePaths": [
                "bootstrap-sass/assets/stylesheets",
                "npm-font-open-sans",
                "summernote/src/less"
            ]
        },
        "sourcemaps": {
            "loadMaps": true
        },
        "autoprefixer": {
            "browsers": [
                "Android 2.3",
                "Android >= 4",
                "Chrome >= 20",
                "Firefox >= 24",
                "Explorer >= 8",
                "iOS >= 6",
                "Opera >= 12",
                "Safari >= 6"
            ]
        }
    },
    "assets": {
        "fonts": {
            "vendor": {
                "": ["summernote/dist/font/**/*"],
                "bootstrap": ["bootstrap-sass/assets/fonts/bootstrap/**/*"],
                "opensans": ["npm-font-open-sans/fonts/**/*"]
            },
            "core": {
                "": ["fonts/**/*"]
            },
            "custom": {
                "": ["fonts/**/*"]
            }
        },
        "images": {
            "vendor": {
                "icons": [
                    "x-editable/dist/bootstrap3-editable/img/**/*",
                    "bootstrap-fileinput/img/**/*"
                ]
            },
            "core": {
                "": ["images/**/*"]
            },
            "custom": {
                "": ["images/**/*"]
            }
        },
        "scripts": {
            "ark": {
                "vendor": [
                    "jquery/dist/jquery.js",
                    "jquery-form/src/jquery.form.js",
                    "bootstrap-sass/assets/javascripts/bootstrap.js",
                    "summernote/dist/summernote.js",
                    "select2/dist/js/select2.js",
                    "file-saver.js/FileSaver.js",
                    "tableexport.jquery.plugin/tableExport.min.js",
                    "col-resizable/colResizable-1.6.js",
                    "moment/moment.js",
                    "bootstrap-fileinput/js/plugins/canvas-to-blob.js",
                    "bootstrap-fileinput/js/plugins/purify.js",
                    "bootstrap-fileinput/js/plugins/sortable.js",
                    "bootstrap-fileinput/js/fileinput.js",
                    "bootstrap-fileinput/themes/gly/theme.js",
                    "bootstrap-datetime-picker/js/bootstrap-datetimepicker.js",
                    "x-editable/dist/bootstrap3-editable/js/bootstrap-editable.js",
                    "bootstrap-table/dist/bootstrap-table.js",
                    "bootstrap-table/dist/extensions/accent-neutralise/bootstrap-table-accent-neutralise.js",
                    "bootstrap-table/dist/extensions/cookie/bootstrap-table-cookie.js",
                    "bootstrap-table/dist/extensions/copy-rows/bootstrap-table-copy-rows.js",
                    "bootstrap-table/dist/extensions/editable/bootstrap-table-editable.js",
                    "bootstrap-table/dist/extensions/export/bootstrap-table-export.js",
                    "bootstrap-table/dist/extensions/flat-json/bootstrap-table-flat-json.js",
                    "bootstrap-table/dist/extensions/multiple-search/bootstrap-table-multiple-search.js",
                    "bootstrap-table/dist/extensions/multiple-sort/bootstrap-table-multiple-sort.js",
                    "bootstrap-table/dist/extensions/natural-sorting/bootstrap-table-natural-sorting.js",
                    "bootstrap-table/dist/extensions/resizeable/bootstrap-table-resizeable.js",
                    "bootstrap-table/dist/extensions/select2-filter/bootstrap-table-select2-filter.js",
                    "bootstrap-table/dist/extensions/sticky-header/bootstrap-table-sticky-header.js"
                ],
                "core": [
                    "js/**/*"
                ],
                "custom": [
                    "js/**/*"
                ]
            },
            "ol4": {
                "vendor": [
                    "proj4/dist/proj4.js",
                    "openlayers/dist/ol.js"
                ],
                "core": [],
                "custom": []
            }
        },
        "styles": {
            "ark": [{
                "stream": "build",
                "format": "sass",
                "src": [
                    "scss/theme.scss"
                ],
                "vendor": [
                    "select2/dist/css/select2.min.css",
                    "openlayers/dist/ol.css",
                    "select2-bootstrap-theme/dist/select2-bootstrap.css",
                    "bootstrap-datetime-picker/css/bootstrap-datetimepicker.css",
                    "x-editable/dist/bootstrap3-editable/css/bootstrap-editable.css",
                    "bootstrap-table/dist/bootstrap-table.css",
                    "bootstrap-table/dist/extensions/sticky-header/bootstrap-table-sticky-header.css",
                    "bootstrap-fileinput/css/fileinput.css"
                ],
                "core": [],
                "custom": []
            }]
        }
    },
    "bin": {
        "vendor": [],
        "core": [
            "bin/**/*",
            "bin/**/.*"
        ],
        "custom": [
            "bin/**/*",
            "bin/**/.*"
        ]
    },
    "config": {
        "vendor": [],
        "core": [
            "config/**/*",
            "config/**/.*"
        ],
        "custom": [
            "config/**/*",
            "config/**/.*"
        ]
    },
    "templates": {
        "vendor": [],
        "core": [
            "twig/**/*",
            "twig/**/.*"
        ],
        "custom": [
            "twig/**/*",
            "twig/**/.*"
        ]
    },
    "translations": {
        "vendor": [],
        "core": [
            "xliff/**/*",
            "xliff/**/.*"
        ],
        "custom": [
            "xliff/**/*",
            "xliff/**/.*"
        ]
    },
    "web": {
        "vendor": [],
        "core": [
            "web/**/*",
            "web/**/.*"
        ],
        "custom": [
            "web/**/*",
            "web/**/.*"
        ]
    }
}
