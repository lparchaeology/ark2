<!DOCTYPE html>

<html lang="{{ global.request.locale }}">

    <head>

        <!-- Bootstrap -->
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <!-- The above 3 meta tags *must* come first in the head, any other head content must come *after* these tags -->

        {% block head %}{% endblock %}

        <!-- Combined Bootstrap and ARK CSS -->
        <link href="https://openlayers.org/en/v3.20.1/css/ol.css" rel="stylesheet" type="text/css">
        <link href="{{ asset('/styles/ark.min.css', 'frontend') }}" rel="stylesheet" type="text/css"/>

        <!-- Bootstrap -->
        <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]> <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script> <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script> <![endif]-->

    </head>

    <body>

    <div class="container-fluid">
        <div class="row">

            <div class="col-md-1 sidebar">
                <div class="row usertool username">
                    <a href="{{ path('user.view', {'id': global.user.id}) }}">
                        <span class="usergreeting">
                            {# <span class="dime-icon icon-user small"></span> #}
                            {{ 'user.greeting' | trans({ '%name%': global.user.displayName }) }}
                        </span>
                    </a>
                </div>
                <div class="row usertool">
                    {%  set notificationicon = 'icon-notification small' %}
                    <a href = " {{ path( 'home.messages' ) }}">
                        <span class="dime-icon dimehometool-icon {{ notificationicon }} "></span>
                    </a>
                    <p>
                    <a href="{{ path('user.logout') }}" class="loginbutton">
                        <span class=" dime-icon glyphicon glyphicon-log-out logout"></span>
                        <span class="text">logout</span>
                    </a>
                </div>
                <div class="row">
                    <ul class="list-group dime-navlist">
                        <li class="list-group-item dime-listhead small">
                            <span class="dime-icon icon-add small"></span>
                        </li>
                        <li class=" list-group-item navlist">
                            <a href="{{ path('finds.add') }}">
                                {{ "dime.find.add" | translate }}
                            </a>
                        </li>
                        
                        <li class="list-group-item dime-listhead small">
                            <span class="dime-icon icon-search small"></span>
                        </li>
                        <li class=" list-group-item navlist">
                            <a href="{{ path('finds.list') }}">
                                {{ "dime.find.search" | translate }}
                            </a>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="col-xs-12 col-md-12 col-lg-10">

                <div id="navbar" class="navbar row">
                    <div class="col-md-12 dime-banner">
                        <div class="row">
                            <div class="col-xs-1 col-xs-push-0 col-sm-1 col-sm-push-0 col-md-1 col-md-push-0">
                                <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".sidebar">
                                    <span class="glyphicon glyphicon-menu-hamburger"></span>
                                </button>
                            </div>
                            <div class="col-xs-1 col-xs-push-0 col-sm-1 col-sm-push-2 col-md-1 col-md-push-3">
                                <span class="dime-title">
                                    &nbsp;
                                </span>
                            </div>
                            <div class="col-sm-push-0 col-md-4 col-md-push-6">
                                <form class="navbar-form navbar-right">
                                    <input type="text" class="form-control" placeholder="{{ 'search.placeholder' | trans }}">
                                </form>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <ul class="nav nav-tabs nav-justified dime-nav">
                                    <li role="presentation">
                                        <a href="{{ path('home') }}">
                                            {{ "dime.home" | translate }}
                                        </a>
                                    </li>
                                    <li role="presentation">
                                        <a href="{{ path('detector') }}">
                                            {{ "dime.detector" | translate }}
                                        </a>
                                    </li>
                                    <li role="presentation">
                                        <a href="{{ path('research') }}">
                                            {{ "dime.research" | translate }}
                                        </a>
                                    </li>
                                    <li role="presentation">
                                        <a href="{{ path('about') }}">
                                            {{ "dime.about" | translate }}
                                        </a>
                                    </li>
                                    <li role="presentation">
                                        <a href="{{ path('news') }}">
                                            {{"dime.news" | translate }}
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="main row">
                    {% block content %}{% endblock %}
                </div>
            </div>

        </div>

        {% block loginmodal %}{% endblock %}
    </div>

    {% block footer %}{% endblock %}

        <!-- Combined jQuery, Bootstrap and ARK js -->
        <script> var path = "{{ path('front')|escape('js') }}";</script>
        <script src="https://openlayers.org/en/v3.20.1/build/ol.js"></script>
        <script src="{{ asset('/scripts/ark.min.js', 'frontend') }}"></script>

    </body>

</html>
