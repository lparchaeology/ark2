{# Standard table layout using only HTML5/Bootstrap #}

<div class='table-wrapper-div'>

    <table
        id="{{element.id}}"
        class="{{ 'table bootstrap-table ' ~ element.classes }}"
        data-toggle="table"
        data-classes="{{ 'table bootstrap-table ' ~ element.classes }}"
        data-sort-name="id"
        data-show-refresh="{{ element.canRefresh }}"
        data-show-toggle="{{ element.canToggleView }}"
        data-show-columns="{{ element.canChooseColumns }}"
        data-pagination="{{ element.pagination }}"
        data-page-size="{{ element.pageSize }}"
        data-mobile-responsive="true"
        data-show-export="{{ element.canExportData }}"
        data-export-data-type="all"
        data-export-types="['csv', 'txt']"
        data-switchcardview="{{ element.canToggleView }}"
        data-view-list="{{ element.enableListView }}"
        data-view-detail="{{ element.enableDetailView }}"
        data-view-expand="{{ element.enableExpandListView }}"
        data-view-card="{{ element.enableCardView }}"
        data-view-thumb="{{ element.enableThumbnailView }}"
        data-view-default="{{ element.defaultView }}"
        data-click-to-select="true"
        {% if element.dataUrl %}
            data-url="{{ element.dataUrl }}"
        {% endif %}
        icons="{ columns: 'glyphicon-th-list icon-th-list' }">

        {% if element.showCaption %}
            <caption>{{ element.keyword | translate('caption') }}</caption>
        {% endif %}

        {% if element.showHeader %}
            <thead>
                <tr>
                    {% if element.selection %}
                        <th class="checkedhead"
                            data-field="checked"
                            data-sortable="false"
                            data-switchable="false"
                            data-card-visible="false"
                            data-tableexport-display="none"></th>
                    {% endif %}
                    {% if element.image %}
                        <th class="thumbimagehead"
                            data-field="{{element.image}}"
                            data-title="{{element.image}}"
                            data-sortable="false"
                            data-tableexport-display="none"></th>
                    {% endif %}
                    {% for child in children %}
                        {% set childId = child.state.name ? child.element.id ~ '_' ~ child.state.name : child.element.id %}
                        <th data-field="{{ childId }}"
                            data-title="{{ child.state.keyword | translate }}"
                            data-sortable="true"
                            data-sorter="alphanum"
                            data-visible="{{ child.state.visible }}"
                            data-card-visible="false"
                            data-tableexport-value="{{ child.state.keyword | translate }}">
                            {{ child.state.keyword | translate }}
                        </th>
                    {% endfor %}
                    <th class="controlshead"
                        data-field="controls"
                        data-sortable="false"
                        data-switchable="false"
                        data-card-visible="false"
                        data-tableexport-display="none"></th>
                </tr>
            </thead>
        {% endif %}

        <tbody>
            {% for item in data %}
                <tr data-unique-id="{{ item.id }}">
                    {% if element.selection %}
                        <td class="not-card-visible"
                            data-field="checked"
                            data-tableexport-display="none">
                            <span class="tablecheckbox glyphicon glyphicon-unchecked"></span>
                        </td>
                    {% endif %}
                    {% if element.image %}
                        <td class="thumbimage"
                            data-field="{{element.image}}"
                            data-tableexport-display="none">
                            {% set image = item.property(element.image).value() %}
                            {% if image is not empty %}
                                {% if item.property(element.image).attribute.hasMultipleOccurrences %}
                                    {% set image = image[0] %}
                                {% endif %}
                                <img src="{{ imagePath('file', image.id, {'p': 'thumb'}) }}" alt=''/>
                            {% else %}
                                <span class="glyphicon glyphicon-picture placeholder-img"></span>
                            {% endif %}
                        </td>
                    {% endif %}
                    {% for child in children %}
                        {% if item.property is defined %}
                            {% set val = item.property(child.state.name) %}
                        {% else %}
                            {% set val = attribute(item, child.state.name) %}
                        {% endif %}
                        {% set child = child | merge({'data' : val }) %}
                        {% set childId = child.state.name ? child.element.id ~ '_' ~ child.state.name : child.element.id %}
                        <td data-field="{{ childId }}"
                            data-tableexport-value="{{ child.element.renderValue(child, forms, form) | raw }}">
                            <span class="cell-label">{{ child.state.keyword | translate }}</span>
                            {{ child.element.renderView(child, forms, form) | raw }}
                        </td>
                    {% endfor %}
                    <td class="controls"
                        data-field="controls"
                        data-tableexport-display="none">
                        <span class="cell-label">{{ 'dime.controls'|trans }}</span>
                        {% if state.controls.actor is defined and state.controls.actor %}
                            <a href="#" class="open-focus">
                                <span class="dime-icon icon-user-focus small"></span>
                            </a>
                        {% endif %}
                        <a href="{{ path(state.modules[item.schema.module.id].route, {'id': item.id}) }}">
                            <span class="glyphicon glyphicon-file"></span>
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>

        {% if element.showFooter %}
            <tfoot>
            </tfoot>
        {% endif %}

    </table>

<div id = "thumbModal"></div>
</div>

<script>
window.itemkey =
    {% if data[0] is defined %}
        "{{ data[0].schema.module.id }}";
    {% else %}
        {{null}}
    {% endif %}

window.itemlist = [
    {% if data|length > 0 %}
        {% for item in data %}
            "{{ item.id }}",
        {% endfor %}
    {% else %}
            false
     {% endif %}
];
if(typeof window.translations == 'undefined'){
    window.translations = [];
}
window.translations['dime.user.update.success'] = "{{ 'dime.user.update.success' | trans }}";
window.translations['dime.user.update.failure'] = "{{ 'dime.user.update.failure' | trans }}"

</script>
