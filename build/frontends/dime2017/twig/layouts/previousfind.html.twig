{# Define a form in a modal #}

{% if forms.previous.vars.data.id is defined %}

    <div class="previous">
        <div class="register-alert alert alert-success alert-dismissable fade in" role="alert">
            {{ 'dime.find.registered'| trans({ '%id%': forms.previous.vars.data.id }) }}
            <div class="btn btn-info" data-toggle="modal" data-target="#previousitem-modal">
                <span class="glyphicon glyphicon-eye-open"></span>
            </div>
        </div>
    </div>
    <div class="modal fade" id="previousitem-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
        <div class="modal-dialog">
            <div class="loginmodal-container dime">
                {% if element.type.id == 'form' and form %}
                    {{ form_start(form) }}
                {% endif %}

                {% include 'layouts/grid.html.twig' %}

                {% if element.type.id == 'form' and form %}
                    {{ form_end(form) }}
                {% endif %}
                <div class="btn-block">
                    <a href="{{path('dime.finds.view', {'id': forms.previous.vars.data.id})}}">
                        <span class="glyphicon glyphicon-file"></span>
                    </a>
                </div>
                <button type="button" id="previousitemclose" class="btn previousitem-button previousitemclose" data-dismiss="modal">{{ 'dime.close' | translate }}</button>
            </div>
        </div>
    </div>
</div>

{% endif %}
