{# DIME treasure form layout #}

<div class="container-fluid">

<div class="row"><h1>Fundliste</h1></div>

<div class="row">
    <div class="col-md-4">
        <div class="row">{{ data.museum.property('id').value }}</div>
        <div class="row">{{ data.museum.property('fullname').value.content }}</div>
        <div class="row">{{ data.museum.property('email').value }}</div>
        <div class="row">{{ data.museum.property('telephone').value }}</div>
        <div class="row">{{ data.agent.property('fullname').value.content }}</div>
        <div class="row">{{ "now" | date('Y-m-d') }}</div>
    </div>
    <div class="col-md-4">
        <div class="row">{{ data.claimant.property('fullname').value.content }}</div>
        <div class="row">{{ data.claimant.property('email').value }}</div>
        <div class="row">{{ data.claimant.property('telephone').value }}</div>
        <div class="row">{{ data.claimant.property('detectorist_id').value }}</div>
    </div>
    <div class="col-md-4">
        <div class="row">Nationalmuseet</div>
    </div>
</div>

<div class="row">
    <table class="table">

        <thead>
            <tr>
                <th class="col-md-2">ID</th>
                <th class="col-md-6">Details</th>
                <th class="col-md-2">Photos</th>
                <th class="col-md-2">Nationalmuseet</th>
            </tr>
        </thead>

        <tbody>

            {% for find in data.finds %}

                <tr>

                    <td>
                        {{ find.property('museum_id').value }}
                    </td>

                    <td>
                        <div class="row">
                            {{ find.property('class').value.keyword | translate }}
                            {% if find.property('classification').value.subtype %}
                                {{ find.property('classification').value.subtype.keyword | translate }}
                            {% endif %}
                        </div>
                        <div class="row">
                            {{ find.property('material').value.keyword | translate }}
                        </div>
                        <div class="row">
                            {{ find.property('finddate').value | date('Y-m-d') }}
                            {{ find.property('municipality').value.keyword | translate }}
                        </div>
                        <div class="row">
                            {% if find.property('description').value.text %}
                                {{ find.property('description').value.text.keyword | translate }}
                            {% endif %}
                        </div>
                    </td>

                    <td>
                        Thumbnails
                    </td>

                    <td>
                    </td>

                </tr>

            {% endfor %}

        </tbody>
    </table>
</div>
</div>
