{# DIME treasure form layout #}

<div class="container-fluid">

<div class="row"><h1>Fundliste</h1></div>

<div class="row">
    <div class="col-md-4">
        <div class="row">{{ data.museum.value('id') }}</div>
        <div class="row">{{ data.museum.value('fullname').content }}</div>
        <div class="row">{{ data.museum.value('email') }}</div>
        <div class="row">{{ data.museum.value('telephone') }}</div>
        <div class="row">{{ data.agent.value('fullname').content }}</div>
        <div class="row">{{ "now" | date('Y-m-d') }}</div>
    </div>
    <div class="col-md-4">
        <div class="row">{{ data.claimant.value('fullname').content }}</div>
        <div class="row">{{ data.claimant.value('email') }}</div>
        <div class="row">{{ data.claimant.value('telephone') }}</div>
        <div class="row">{{ data.claimant.value('detectorist_id') }}</div>
    </div>
    <div class="col-md-4">
        <div class="row">Nationalmuseet</div>
    </div>
</div>

<div class="row">
    <table class="table">

        <thead>
            <tr>
                <th class="col-md-2">ID</th>
                <th class="col-md-6">Details</th>
                <th class="col-md-2">Photos</th>
                <th class="col-md-2">Nationalmuseet</th>
            </tr>
        </thead>

        <tbody>

            {% for find in data.finds %}

                <tr>

                    <td>
                        {{ find.value('museum_id') }}
                    </td>

                    <td>
                        <div class="row">
                            {{ find.value('class').keyword | translate }}
                            {% if find.value('classification').subtype %}
                                {{ find.value('classification').subtype.keyword | translate }}
                            {% endif %}
                        </div>
                        <div class="row">
                            {{ find.value('material').keyword | translate }}
                        </div>
                        <div class="row">
                            {{ find.value('finddate') | date('Y-m-d') }}
                            {{ find.value('municipality').keyword | translate }}
                        </div>
                        <div class="row">
                            {% if find.value('description').text %}
                                {{ find.value('description').text.content }}
                            {% endif %}
                        </div>
                    </td>

                    <td>
                        {% set images = find.value('image') %}
                        {% for image in images %}
                            {{ imageUrl('file', image.id, {'p': 'preview'}) }}
                            {# <img src="{{ imageUrl('file', image.id, {'p': 'preview'}) }}" alt="" /> #}
                        {% endfor %}
                    </td>

                    <td>
                    </td>

                </tr>

            {% endfor %}

        </tbody>
    </table>
</div>
</div>
