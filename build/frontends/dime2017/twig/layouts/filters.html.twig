{{ form_start(form) }}

    <div class="row">
        <span class="col-sm-1 filters-toggle">
            {{ 'dime.find.filters' | translate }}
        </span>
    </div>

    <div class="row filters">

        <label class="col-sm-1 control-label">
            <br/>
            {{ 'dime.find.filters' | translate }}
        </label>

        <div class="col-sm-10">
            <div class="row">
                <div class="col-sm-3">
                    {{- form_label(form.municipality) -}}<br/>
                    {{- form_widget(form.municipality) -}}
                </div>
                <div class="col-sm-3">
                    {{- form_label(form.class) -}}<br/>
                    {{- form_widget(form.class) -}}
                </div>
                <div class="col-sm-3">
                    {{- form_label(form.period) -}}<br/>
                    {{- form_widget(form.period) -}}
                </div>
                <div class="col-sm-3">
                    {{- form_label(form.material) -}}<br/>
                    {{- form_widget(form.material) -}}
                </div>
            </div>
        </div>

        <div class="col-sm-1">
            <br/>
            {{- form_widget(form.search) -}}
            {% do form.search.setRendered %}
        </div>

    </div>

    {% if global.request.attributes.get('_route') == 'dime.home.finds' %}
        <div class="row filters">

            <div class="col-sm-1"><br/></div>

            <div class="col-sm-10">
                <div class="row">
                    <div class="col-sm-3">
                        {{- form_label(form.museum) -}}<br/>
                        {{- form_widget(form.museum) -}}
                    </div>
                    <div class="col-sm-3">
                        {{- form_label(form.finder) -}}<br/>
                        {{- form_widget(form.finder) -}}
                    </div>
                    <div class="col-sm-3">
                        {{- form_label(form.status) -}}<br/>
                        {{- form_widget(form.status) -}}
                    </div>
                    <div class="col-sm-3">
                        {{- form_label(form.treasure) -}}<br/>
                        {{- form_widget(form.treasure) -}}
                    </div>
                </div>
            </div>

            <div class="col-sm-1">
                <br/>
                {{- form_widget(form.clear) -}}
                {% do form.clear.setRendered %}
            </div>

        </div>
    {% else %}
        {% do form.museum.setRendered %}
        {% do form.finder.setRendered %}
        {% do form.status.setRendered %}
        {% do form.treasure.setRendered %}
        {% do form.clear.setRendered %}
    {% endif %}

{{ form_end(form) }}
