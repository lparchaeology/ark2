{% extends layout_template  %}

{% form_theme forgotPasswordForm 'bootstrap_3_layout.html.twig' %}

{% block title %}{{ 'Forgot your password?' | trans({}, 'messages') }}{% endblock %}

{% block content %}
    <h1>{{ 'Forgot your password?' | trans({}, 'messages') }}</h1>

    <p class="text-muted lead">
        {{ 'Enter your email address below and we\'ll send you password reset instructions.' | trans({}, 'messages') }}
    </p>

    {{ form_start(forgotPasswordForm) }}
    {{ form_widget(forgotPasswordForm) }}
    {{ form_end(forgotPasswordForm) }}

    <hr />
    <p class="text-muted">
        {{ 'If you don\'t get an email within a few minutes, make sure to check your spam or junk folder. The sender is <strong>%fromAddress%</strong>.' | trans({ '%fromAddress%': fromAddress }) | raw }}
    </p>
{% endblock %}
