{# Block to write out correctly formatted field value #}
{% block dating %}
<div class="form-group">

    {{ form_label(form) }}

    <div class="col-sm-8 col-lg-7">
    
        {% if (state.mode is sameas("edit")) %}
            <div class = "simple-dating">
                <button id="oldtid-dating-button" class="oldtid dating-button btn inactive">{{ 'dime.dating.oldtid' | translate }}</button>
                <button id="historiktid-dating-button" class="historiktid dating-button btn inactive">{{ 'dime.dating.historiktid' | translate }}</button>
                <button id="advanced-dating-button" class="advanced-dating-button dating-button btn">{{ 'dime.advanced-dating-button' | translate }}</button>
            </div>
            <div class = "advanced-dating">
        {% else %}
            <div>
        {% endif %}
                <div class="row">
                    <div class="col-sm-6">
                        {{ form_widget(form.period) }}
                    </div>
                    <div class="col-sm-6">
                        {{ form_widget(form.period_span) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        {{ form_widget(form.year) }}
                    </div>
                    <div class="col-sm-6">
                        {{ form_widget(form.year_span) }}
                    </div>
                </div>
            </div>
    </div>

    {% do form.setRendered %}

</div>

{% endblock dating %}
