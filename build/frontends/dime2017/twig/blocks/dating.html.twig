{# Block to write out correctly formatted field value #}
{% block dating %}
<div class="form-group">

    {{ form_label(form) }}

    <div class="col-sm-8 col-lg-7">
        <div class="row">
            <div class="col-sm-6">
                {{ form_widget(form.year) }}
            </div>
            <div class="col-sm-6">
                {{ form_widget(form.year_span) }}
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6">
                {{ form_widget(form.period) }}
            </div>
            <div class="col-sm-6">
                {{ form_widget(form.period_span) }}
            </div>
        </div>
    </div>

    {% do form.setRendered %}

</div>

{% endblock dating %}
