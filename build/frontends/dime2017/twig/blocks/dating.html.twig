{# Block to write out correctly formatted field value #}
{% block dating %}
<div class="form-group">

    {% set fieldForm = form[field.formName] %}

    {{ form_label(fieldForm) }}

    <div class="col-sm-10 col-lg-9">
        <div class="row">
            <div class="col-sm-6">
                {{ form_widget(fieldForm.year) }}
            </div>
            <div class="col-sm-6">
                {{ form_widget(fieldForm.year_span) }}
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6">
                {{ form_widget(fieldForm.period) }}
            </div>
            <div class="col-sm-6">
                {{ form_widget(fieldForm.period_span) }}
            </div>
        </div>
    </div>

    {% do fieldForm.setRendered %}

</div>
<a id="classification-modal-button" href="#" data-toggle="modal" data-target="#dating-modal" class="loginbutton">
    {{ 'dime.modal' | trans }}
</a>
<div class="modal fade" id="dating-modal" tabindex="-1" role="dialog" aria-labelledby="datingModal" aria-hidden="true" style="display: none;">
    <div class="dating-modal-dialog">
        <div class="dating-modal-container dime">
  <title>Timeline | Basic demo</title>
<div class="classification-holder"></div>

<div id="visualization"></div>

        </div>
    </div>
</div>
<script>
window.translations=[];
window.translations['undef'] = '{{ 'dime.dropdown.undef' | trans }}';
</script>

{% endblock dating %}
