{% block image -%}

{% if state.modus == 'active' %}

    {{ form_row(form) }}

{% else %}

    <div class='item'>
        {% if data and data.value %}
            <img src="{{ data.value.sourcePath('avatar') }}" alt='' />
        {% endif %}
    </div>

    {% do form.setRendered %}

{% endif %}

{%- endblock image %}
