{# Define the standard notification block #}
{% block notification %}

    <a class = "messagetext" href="{{ path('dime.home.messages' ) }}">
        {{ notification.event.term.keyword | trans }}
        <br/>
        {{ notification.event.subject.schema.keyword | trans ~ ' ' ~  notification.event.subject.id }}
    </a>
    <span class="markasread" href="{{ path('api.internal.message.read') }}"
    message="{{ notification.id }}"
    recipient="{{ workflow.actor.id }}">
        &times;
    </span>

{% endblock notification %}
