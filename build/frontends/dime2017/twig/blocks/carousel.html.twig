{% block carousel -%}

<div id='carousel-custom' class='carousel slide' data-ride='carousel'>
     <div class='carousel-outer'>
        <!-- Wrapper for slides -->
        <div class='carousel-inner'>
        {% for key, item in data %}
        	<div class='item
        	    {% if key == 0 %}
        	 		active
        	     {% endif %}
        	 '>
                <img src="{{ asset('/images/find_example/'~item.id~'.jpg', 'frontend') }}" alt='' />
            </div>
        {% endfor %}
        </div>
            
        <!-- Controls -->
        <a class='left carousel-control' href='#carousel-custom' data-slide='prev'>
            <span class='glyphicon glyphicon-chevron-left'></span>
        </a>
        <a class='right carousel-control' href='#carousel-custom' data-slide='next'>
            <span class='glyphicon glyphicon-chevron-right'></span>
        </a>
    </div>
    
    <!-- Indicators -->
    <ol class='carousel-indicators mCustomScrollbar'>
        {% for key, item in data %}
        	<li data-target='#carousel-custom' data-slide-to='{{ key }}'
        	    {% if key == 0 %}
        	 		 class='active'
        	     {% endif %}
        	 >
            <img src="{{ asset('/images/find_example/'~item.id~'_thumb.jpg', 'frontend') }}" alt='' />
            </li>
        {% endfor %}
    </ol>
</div>

<div class="carouselextratext">

{% for key,item in data %}
	<div class="carouselextratext_{{ key }}">
	{% for field in layout.elements %}
	  {% if field.name == 'dime_find_findpoint' %}
	  {% else %}
          <div class="homefield">{{field.keyword|trans}}: {{ field.renderView(item) }}</div>
      {% endif %}
     {% endfor %}
     </div>
{% endfor %}

</div>


</script>

{%- endblock carousel %}
