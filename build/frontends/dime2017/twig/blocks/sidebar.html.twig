{# Define the standard sidebar block #}

{% block sidebar %}

    {% block usertool %}{% endblock %}

    <div class="row">
        {% if page.sidebar.keyword %}
            {{ vocabulary.keyword|translate }}
        {% endif %}
        <ul class="list-group dime-navlist" role="menu" aria-labelledby="menu">
            {% set children = page.sidebar.children %}
            {% tree nav in children %}
                {% if is_granted(nav.route) %}
                    {% if nav.children %}
                        <li>{% include "blocks/nav.html.twig" %}
                        <ul class="list-group dime-navlist">
                    {% else %}
                        <li>{% include "blocks/nav.html.twig" %}</li>
                    {% endif %}
                    {% subtree nav.children %}
                    {% if nav.children %}
                        </ul></li>
                    {% endif %}
                {% endif %}
            {% endtree %}
        </ul>
    </div>

{% endblock sidebar %}
