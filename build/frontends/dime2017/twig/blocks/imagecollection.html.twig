{% block carousel -%}

{% if modus == 'active' %}

    {{ form_row(form[field.formName]) }}

{% else %}

    <div id='carousel-custom' class='carousel slide' data-ride='carousel'>

        <div class='carousel-outer'>

            <!-- Wrapper for slides -->
            <div class='carousel-inner'>

                {% for key, image in data.value %}

                    <div class='item {% if key == 0 %} active {% endif %}'>
                        <img src="{{ image.sourcePath('preview') }}" alt='' />
                    </div>

                {% endfor %}

            </div>

            <!-- Controls -->
            <a class='left carousel-control' href='#carousel-custom' data-slide='prev'>
                <span class='glyphicon glyphicon-chevron-left'></span>
            </a>
            <a class='right carousel-control' href='#carousel-custom' data-slide='next'>
                <span class='glyphicon glyphicon-chevron-right'></span>
            </a>

        </div>

        <!-- Indicators -->
        <ol class='carousel-indicators mCustomScrollbar'>
            {% for key, image in data.value %}
                <li data-target='#carousel-custom' data-slide-to='{{ key }}' {% if key == 0 %} class='active' {% endif %} >
                    <img src="{{ image.sourcePath('thumb') }}" alt='' />
                </li>
            {% endfor %}
        </ol>

    </div>

    {% do form[field.formName].setRendered %}

{% endif %}

{%- endblock carousel %}
