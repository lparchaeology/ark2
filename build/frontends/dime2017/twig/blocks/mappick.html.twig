{# Block to write out correctly formatted field value #}
{% block mappick %}
<div class="mappick-group form-group row">

    {% set fieldForm = form[field.formName] %}

    {{ form_label(fieldForm) }}

    <div class="mappick_fields col-sm-4">
        {{ form_widget(fieldForm.easting, {'attr': {'class': 'mappick_field mappick_easting'}}) }}
        {{ form_widget(fieldForm.northing, {'attr': {'class': 'mappick_field mappick_northing'}}) }}
    </div>
    <div id="mappick" class="mappick col-sm-6"></div>

    <script>var mapPin = "{{ asset('/images/icons/pin.png', 'frontend') }}"</script>

</div>

{% endblock mappick %}
