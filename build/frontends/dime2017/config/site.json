{
    "site": "dime",
    "debug": true,
    "locale": {
        "default": "da",
        "locales": ["da", "en"],
        "timezone": "UTC"
    },
    "spatial": {
        "driver": "mysql"
    },
    "file": {
        "root": "/files",
        "data": {
            "adapter": "Local",
            "path": "/data"
        },
        "cache": {
            "adapter": "Local",
            "path": "/cache"
        }
    },
    "image": {
        "driver": "gd",
        "max_image_size": 4000000,
        "presets": {
            "thumb": { "w": 100, "h": 100 },
            "preview": { "w": 500, "h": 500 }
        }
    },
    "view": {
        "renderer": {
            "pdf": "/usr/bin/xvfb-run /usr/bin/wkhtmltopdf",
            "image": "/usr/bin/xvfb-run /usr/bin/wkhtmltoimage"
        },
        "recaptcha": {
            "locale_key": "da",
            "enabled": true,
            "verify_host": true,
            "ajax": true
        }
    },
    "api": {
        "enable": true,
        "path": "/api/v2"
    },
    "web": {
        "enable": true,
        "frontend": "dime2017"
    },
    "routes": {
        "/api/v2": "DIME\\Routing\\ApiControllerProvider",
        "/": "DIME\\Routing\\ViewControllerProvider"
    },
    "security": {
        "access_rules": [
            ["(^/home)|(^/users)|(^/fund/add$)|(^/lokalitet/add$)", "ROLE_USER"],
            ["^/.+$", "IS_AUTHENTICATED_ANONYMOUSLY"]
        ],
        "user_paths": {
            "da": {
                "root": "/brugere",
                "login": "/brugere/login",
                "check": "/brugere/check",
                "logout": "/brugere/logout",
                "register": "/brugere/register",
                "reset": "/brugere/reset"
            },
            "en": {
                "root": "/users",
                "login": "/users/login",
                "check": "/users/check",
                "logout": "/users/logout",
                "register": "/users/register",
                "reset": "/users/reset"
            }
        }
    }
}
