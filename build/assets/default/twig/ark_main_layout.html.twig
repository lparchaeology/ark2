<!DOCTYPE html>
<html lang="{{ global.request.locale }}">

    <head>

        <!-- Bootstrap -->
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->

        <title>{% block title '' %} - {{ 'ark.brand' | trans }}</title>

        <!-- Combined Bootstrap and ARK CSS -->
        <link href="{{ asset('themes/default/styles/ark.min.css') }}" rel="stylesheet" type="text/css" />

        <!-- Bootstrap -->
        <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
            <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
            <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->

    </head>

    <body>
        <nav class="navbar navbar-default navbar-fixed-top">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="{{ path('homepage') }}">{{ 'ark.brand' | trans }}</a>
                </div>
                <div id="navbar" class="navbar-collapse collapse">
                    <ul class="nav navbar-nav navbar-right">
                        {% if global.user %}
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    {{ 'user.greeting' | trans({'%name%': global.user.displayName }, 'messages') }}
                                    <span class="caret"></span>
                                </a>
                                <ul class="dropdown-menu" role="menu">
                                    <li><a href="{{ path('user') }}"><span class="glyphicon glyphicon-user"></span> {{ 'user.menu.view' | trans }}</a></li>
                                    <li><a href="{{ path('user.profile-edit') }}"><span class="glyphicon glyphicon-edit"></span> {{ 'user.menu.edit' | trans }}</a></li>
                                    <li><a href="{{ path('user.change-password') }}"><span class="glyphicon glyphicon-lock"></span> {{ 'user.menu.password' | trans }}</a></li>
                                    <li><a href="{{ path('user.list') }}"><span class="glyphicon glyphicon-list"></span> {{ 'user.menu.list' | trans }}</a></li>
                                    <li><a href="{{ path('user.logout') }}"><span class="glyphicon glyphicon-off"></span> {{ 'user.menu.logout' | trans }}</a></li>
                                </ul>
                            </li>
                        {% else %}
                            <li><a href="{{ path('user.login') }}">{{ 'user.menu.login' | trans }}</a></li>
                            <li><a href="{{ path('user.register') }}">{{ 'user.menu.register' | trans }}</a></li>
                        {% endif %}
                    </ul>
                    <form class="navbar-form navbar-right">
                        <input type="text" class="form-control" placeholder="{{ 'search.placeholder' | trans }}">
                    </form>
                </div>
            </div>
        </nav>

        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-3 col-md-2 sidebar">
                    <ul class="nav nav-sidebar">
                        <li class="active"><a href="#">Home <span class="sr-only">(current)</span></a></li>
                        <li><a href="#">Add</a></li>
                        <li><a href="#">View</a></li>
                        <li><a href="#">Edit</a></li>
                    </ul>
                    <ul class="nav nav-sidebar">
                        <li><a href="">Menu 2.1</a></li>
                        <li><a href="">Menu 2.2</a></li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
                    {% block content %}{% endblock %}
                </div>
            </div>
        </div>

        <!-- Combined jQuery, Bootstrap and ARK js -->
        <script src="{{ asset('themes/default/scripts/ark.min.js') }}"></script>
    </body>

</html>
