{# Block to show text about non-participating museums #}

{% block link %}

    {% set find = forms.find.vars.value %}
    {% set museum = find.value('museum') %}
    {% set participating = museum.value('participating') %}
    {% if participating != true %}

        <div class="form-group">
            <label class="col-xs-12 col-sm-4 col-xs-12 col-sm-4 control-label"></label>
            <div class="form-group-widget col-sm-11 col-sm-7 col-lg-7">
                {{ 'dime.actions.museum.nonparticipating' | translate }}
                <br />
            </div>
        </div>

    {% endif %}

{% endblock link %}
