{# Block to write out correctly formatted field value #}
{% block mappick %}

{{ form_label(form) }}

<div class="mappick-group form-group row">

    <div class="mappick-fields col-sm-6">
        <div class="row mappick-options mappick-utm">
            {% if state.modus == 'active' %}
                <div class="radio">
                    <input type="radio" name="mappick-coordinates-radio" id="mappick-utm" checked="checked" />
                    <label for="mappick-utm"><span class="radiolabel">{{ 'dime.find.location.utm' | translate }}</span></label>
                </div>
                {{ form_widget(form.utmEasting, {'attr': {'class': 'mappick_field mappick-utm-control'}}) }}
                {{ form_widget(form.utmNorthing, {'attr': {'class': 'mappick-field mappick-utm-control'}}) }}
            {% else %}
                {{ form_row(form.utmEasting) }}
                {{ form_row(form.utmNorthing) }}
            {% endif %}
        </div>
        <div class="row mappick-options mappick-decimal">
            {% if state.modus == 'active' %}
                <div class="radio">
                    <input type="radio" name="mappick-coordinates-radio" id="mappick-decimal" />
                    <label for="mappick-decimal"><span class="radiolabel">{{ 'dime.find.location.decimal' | translate }}</span></label>
                </div>
                {{ form_widget(form.easting, {'attr': {'class': 'mappick_field mappick-decimal-control', 'readonly':'readonly'}}) }}
                {{ form_widget(form.northing, {'attr': {'class': 'mappick-field mappick-decimal-control', 'readonly':'readonly'}}) }}
            {% else %}
                {{ form_row(form.easting) }}
                {{ form_row(form.northing) }}
            {% endif %}
            {{ form_row(form.srid) }}
            {{ form_row(form.format) }}
        </div>
    </div>
    <div id="mappick" class="mappick col-sm-6"></div>

    <script>var mapPin = "{{ asset('/images/icons/pin.png', 'frontend') }}"</script>

    {% do form.setRendered %}

</div>

{% endblock mappick %}
