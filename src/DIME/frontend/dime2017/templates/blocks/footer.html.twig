{# Define the footer block #}
{% block footer %}

    <footer class="footer navbar-fixed-bottom">
        <div class= "credits col-md-6 col-md-push-3">
            {{ 'dime.copyright' | translate }} <br> {{ 'dime.credits' | translate }}
        </div>
        <div class="footer-right col-md-push-3 col-md-2">
            {{ 'dime.supportedby' | translate }} <span class="funder">{{ 'dime.krogager' | translate }}</span>
        </div>
    </footer>
    
    <script>
        window.applocale = "{{ app.locale }}";
    </script>

{% endblock footer %}
