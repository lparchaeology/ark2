{# Define the modal photo block #}
{% block photomodal %}


<div class="form-group">

  <button type="button" id="modal_photobtn" name="modal_photobtn" class="btn btn-default" data-toggle="modal" data-target="#photo-modal">PHOTO</button>

    <div class="modal fade" id="photo-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
        <div class="modal-dialog">
          <div class="filemodal">
            {% spaceless %}
                {{ form_row(form.file) }}
            {% endspaceless %}
          </div>
        </div>

        {{ form_row(form.previous) }}
        {{ form_row(form.existing) }}
    </div>
    {% do form.setRendered %}
</div>

{% endblock photomodal %}
