{# Block to write out correctly formatted field value #}
{% block classification %}

<div class="form-group">

    <div class="col-md-4"></div>

    <div class="col-md-8">

        {{ form_widget(form) }}

        <div class="modal fade" id="dating-modal" tabindex="-1" role="dialog" aria-labelledby="datingModal" aria-hidden="true" style="display: none;">
            <div class="dating-modal-dialog">
                <div class="dating-modal-container dime">
                    <div id="classification-holder-row" class="classification-holder row"></div>
                    <div id="timeline-holder-row" class="timeline-holder row">
                        <div id="timeline-holder-col" class="col-sm-12">
                            <div class="vis-tl-zoom ol-unselectable vis-tl-control">
                                <button class="vis-tl-zoom-in" type="button" title="Zoom in">+</button>
                                <button class="vis-tl-zoom-out" type="button" title="Zoom out">âˆ’</button>
                            </div>
                            <div id="visualization"></div>
                        </div>
                    </div>
                    <div class="intro">{{ 'dime.classification.explaination' | trans }}</div>
                    <button id="closemodal" class="close" type="submit">{{ 'dime.confirm' | trans }}</button>
                </div>
            </div>
        </div>

    </div>
</div>

{% endblock classification %}
