{# Block to write out correctly formatted field value #}
{% block dating %}
<div class="form-group">

    {{ form_label(form) }}

    <div class="col-sm-8 col-lg-7">
        <div class="row">
            <div class="col-sm-6">
                {{ form_widget(form.year) }}
            </div>
            <div class="col-sm-6">
                {{ form_widget(form.year_span) }}
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6">
                {{ form_widget(form.period) }}
            </div>
            <div class="col-sm-6">
                {{ form_widget(form.period_span) }}
            </div>
        </div>
    </div>

    {% do form.setRendered %}

    <div class="modal fade" id="dating-modal" tabindex="-1" role="dialog" aria-labelledby="datingModal" aria-hidden="true" style="display: none;">
        <div class="dating-modal-dialog">
            <div class="dating-modal-container dime">
                <title>Timeline | Basic demo</title>
                <div class="classification-holder"></div>
                <div id="visualization"></div>
            </div>
        </div>
    </div>

    <script>
        window.translations=[];
        window.translations['undef'] = '{{ 'dime.dropdown.undef' | trans }}';
    </script>

</div>

{% endblock dating %}
