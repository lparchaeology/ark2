
{% if global.user %}

    <p>{{ 'core.user.login.loggedin' | trans({ '%name%': global.user.displayName }) }}</p>
    <p><a href="{{ path('user.logout') }}">{{ 'core.user.login.logout' | translate() }}</a></p>

{% else %}

    <h2>{{ 'core.user.login.heading' | translate }}</h2>

    <p class="text-muted lead">
        {{ 'core.user.login.notregistered' | translate }}
        <a href="{{ path('user.register') }}">{{ 'core.user.login.register' | translate }}</a>
    </p>

    {% include "layouts/grid.html.twig" %}

{% endif %}
