{{ form_start(form) }}

    <div class="row">

        <div class="col-sm-11">

            <div class="row filters">
                <div class="col-sm-3">
                    {{- form_label(form.municipality) -}}<br/>
                    {{- form_widget(form.municipality) -}}
                </div>
                <div class="col-sm-3">
                    {{- form_label(form.class) -}}<br/>
                    {{- form_widget(form.class) -}}
                </div>
                <div class="col-sm-3">
                    {{- form_label(form.period) -}}<br/>
                    {{- form_widget(form.period) -}}
                </div>
                <div class="col-sm-3">
                    {{- form_label(form.material) -}}<br/>
                    {{- form_widget(form.material) -}}
                </div>
            </div>

            {% if global.request.attributes.get('_route') is same as('dime.home.finds') %}

                <div class="row filters">
                    <div class="col-sm-3">
                        {{- form_label(form.museum) -}}<br/>
                        {{- form_widget(form.museum) -}}
                    </div>
                    <div class="col-sm-3">
                        {{- form_label(form.finder) -}}<br/>
                        {{- form_widget(form.finder) -}}
                    </div>
                    <div class="col-sm-3">
                        {{- form_label(form.status) -}}<br/>
                        {{- form_widget(form.status) -}}
                    </div>
                    <div class="col-sm-3">
                        {{- form_label(form.treasure) -}}<br/>
                        {{- form_widget(form.treasure) -}}
                    </div>
                </div>

                <div class="row filters">
                    <div class="col-sm-3">
                        {{- form_label(form.visibility) -}}<br/>
                        {{- form_widget(form.visibility) -}}
                    </div>
                    <div class="col-sm-3">
                        {{- form_label(form.custody) -}}<br/>
                        {{- form_widget(form.custody) -}}
                    </div>
                    <div class="col-sm-3">
                        {{- form_label(form.find_date) -}}<br/>
                        {{- form_widget(form.find_date) -}}
                    </div>
                    <div class="col-sm-3">
                        {{- form_label(form.find_date_span) -}}<br/>
                        {{- form_widget(form.find_date_span) -}}
                    </div>
                </div>

            {% endif %}
        </div>

        <div class="col-sm-1">

            <div class="row filters">
                <br/>
                {{- form_widget(form.search) -}}
                {% do form.search.setRendered %}
            </div>

            {% if global.request.attributes.get('_route') is same as('dime.home.finds') %}
                <div class="row filters">
                    <br/>
                    {{- form_widget(form.clear) -}}
                    {% do form.clear.setRendered %}
                </div>
                <div class="row filters">
                    <br/>
                </div>
            {% endif %}

        </div>

    </div>

    {% do form.municipality.setRendered %}
    {% do form.class.setRendered %}
    {% do form.period.setRendered %}
    {% do form.material.setRendered %}
    {% do form.museum.setRendered %}
    {% do form.finder.setRendered %}
    {% do form.status.setRendered %}
    {% do form.treasure.setRendered %}
    {% do form.clear.setRendered %}
    {% do form.visibility.setRendered %}
    {% do form.custody.setRendered %}
    {% do form.find_date.setRendered %}
    {% do form.find_date_span.setRendered %}

{{ form_end(form) }}
