{# DIME treasure form layout #}

<div class="container-fluid">

<div class="row"><h1>Fundliste</h1></div>

<div class="row">
    <div class="col-md-4">
        <div class="row">{{ data.museum.id }}</div>
        <div class="row">{{ data.museum.fullname }}</div>
        <div class="row">{{ data.museum.email }}</div>
        <div class="row">{{ data.museum.telephone }}</div>
        <div class="row">{{ data.agent.fullname }}</div>
        <div class="row">{{ "now" | date('Y-m-d') }}</div>
    </div>
    <div class="col-md-4">
        <div class="row">{{ data.claimant.fullname }}</div>
        <div class="row">{{ data.claimant.email }}</div>
        <div class="row">{{ data.claimant.telephone }}</div>
        <div class="row">{{ data.claimant.detectorist_id }}</div>
    </div>
    <div class="col-md-4">
        <div class="row">Nationalmuseet</div>
    </div>
</div>

<div class="row">
    <table class="table">

        <thead>
            <tr>
                <th class="col-md-2">ID</th>
                <th class="col-md-6">Details</th>
                <th class="col-md-2">Photos</th>
                <th class="col-md-2">Nationalmuseet</th>
            </tr>
        </thead>

        <tbody>

            {% for find in data.finds %}

                <tr>

                    <td>
                        {{ find.museum_id }}
                    </td>

                    <td>
                        <div class="row">
                            {{ find.class | translate }}
                            {% if find.classification %}
                                / {{ find.classification.subtype | translate }}
                            {% endif %}
                        </div>
                        <div class="row">
                            {{ find.material | translate }}
                        </div>
                        <div class="row">
                            {{ find.finddate | date('Y-m-d') }}
                        </div>
                        <div class="row">
                            {{ find.municipality | translate }}
                        </div>
                        {% if find.description.text %}
                            <div class="row">
                                {{ find.description.text }}
                            </div>
                        {% endif %}
                    </td>

                    <td>
                        {% set images = find.image %}
                        {% for image in images %}
                            <img src="{{ image.sourceUrl('thumb') }}" alt="" / />
                        {% endfor %}
                    </td>

                    <td>
                    </td>

                </tr>

            {% endfor %}

        </tbody>
    </table>
</div>

</div>
