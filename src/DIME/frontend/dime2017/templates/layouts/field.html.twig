{% if field is defined %}
    {{ form_row(form[field.formName]) }}
{% elseif widget is defined %}
    {% if widget.forceName %}
        {{ form_row(form, {"attr": {"name": widget.formName}}) }}
    {% else %}
        {{ form_row(form) }}
    {% endif %}
{% else %}
    {{ form_row(form) }}
{% endif %}
