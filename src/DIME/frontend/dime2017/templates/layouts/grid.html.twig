{# ARK GridLayout template for standard Bootstrap grid #}

{% for rdx, row in layout.rows %}

    <div class="row">

        {# TODO: Make this driven from GridLayout object! #}
        {% if row | length == 3 %}
            {% set colclass = 'col-md-4' %}
        {% elseif row | length == 2 %}
            {% set colclass = 'col-md-6' %}
        {% else %}
            {% set colclass = 'col-md-12' %}
        {% endif %}

        {% for cdx, col in row %}
            <div class="{{colclass}}">
                {% for idx, cell in col %}
                    {% if cell.type.isLayout %}
                        {{ cell.renderView(data, {'forms': forms[layout.name]})|raw }}
                    {% elseif forms[layout.name][cell.name] is defined %}
                        {{ form_row(forms[layout.name][cell.name]) }}
                    {% else %}
                        {{ cell.renderView(data) }}
                    {% endif %}
                {% endfor %}
            </div>
        {% endfor %}

    </div>

{% endfor %}
