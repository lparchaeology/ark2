{
    "site": "dime",
    "debug": true,
    "timezone": "UTC",
    "locale": "da",
    "locales": ["en", "da"],
    "spatial": "mysql",
    "image": "gd",
    "max_image_size": 4000000,
    "api": {
        "enable": true,
        "path": "/api/v2"
    },
    "web": {
        "enable": true,
        "frontend": "dime2017"
    },
    "routes": {
        "/api/v2": "DIME\\Route\\ApiControllerProvider",
        "/": "DIME\\Route\\ViewControllerProvider"
    },
    "security": {
        "access_rules": [
            ["(^/home)|(^/users)|(^/fund/add$)|(^/lokalitet/add$)", "ROLE_USER"],
            ["^/.+$", "IS_AUTHENTICATED_ANONYMOUSLY"]
        ]
    }
}
