{
    "site": "dime",
    "debug": false,
    "locale": {
        "default": "da",
        "locales": ["da", "en"],
        "timezone": "UTC"
    },
    "spatial": {
        "driver": "mysql"
    },
    "mailer": {
        "enabled": true,
        "use_spool": true,
        "sender": {
            "address": "noreply@danefae.dk",
            "name": "DIME (Do Not Reply)"
        },
        "delivery": {
            "addresses": [],
            "whitelist": []
        },
        "options": {
            "host": "localhost",
            "port": 25,
            "encryption": null,
            "auth_mode": null
        }
    },
    "file": {
        "root": "/files",
        "data": {
            "adapter": "Local",
            "path": "/data"
        },
        "cache": {
            "adapter": "Local",
            "path": "/cache"
        }
    },
    "image": {
        "driver": "gd",
        "max_image_size": 4000000,
        "presets": {
            "thumb": {
                "w": 100,
                "h": 100
            },
            "preview": {
                "w": 500,
                "h": 500
            }
        }
    },
    "view": {
        "renderer": {
            "pdf": "vendor/h4cc/bin/wkhtmltopdf-amd64/bin/wkhtmltopdf-amd64",
            "image": "vendor/h4cc/bin/wkhtmltoimage-amd64/bin/wkhtmltoimage-amd64"
        },
        "recaptcha": {
            "locale_key": "da",
            "enabled": true,
            "verify_host": true,
            "ajax": true
        }
    },
    "api": {
        "enable": true,
        "path": "/api/v2"
    },
    "web": {
        "enable": true,
        "frontend": "dime2017"
    },
    "routes": {
        "/api/v2": "DIME\\Routing\\ApiControllerProvider",
        "/": "DIME\\Routing\\ViewControllerProvider"
    },
    "security": {
        "anonymous": true,
        "https": false,
        "access_rules": [
            ["(^/home)|(^/hjem)|(^/users)|(^/brugere)|(^/finds/add$)|(^/fund/add)", "ROLE_USER"],
            ["^/.+$", "IS_AUTHENTICATED_ANONYMOUSLY"]
        ],
        "remember_me": {
            "always_remember_me": false,
            "key": null,
            "name": "REMEMBERME",
            "lifetime": 31536000,
            "path": "/",
            "domain": null,
            "secure": false,
            "httponly": true,
            "remember_me_parameter": "_remember_me"
        },
        "user": {
            "admin_confirm": false,
            "verify_email": true,
            "verify_email_required": true,
            "email": "noreply@danefae.org",
            "sender": "DIME User Admin (Do Not Reply)",
            "reset_email_template": "user/emails/reset.txt.twig",
            "verify_email_template": "user/emails/verify.txt.twig",
            "password_strength": 2,
            "password_expiry": 0,
            "user_reset": true,
            "user_register": true,
            "default_role": "detectorist",
            "reset_ttl": 86400
        },
        "routes": {
            "admin": {
                "route": "dime.admin",
                "paths": {
                    "da": "/admin",
                    "en": "/admin"
                }
            },
            "user": {
                "paths": {
                    "da": "/brugere",
                    "en": "/users"
                }
            },
            "target": {
                "route": "dime.home",
                "paths": {
                    "da": "/hjem",
                    "en": "/home"
                }
            },
            "check": {
                "route": "user.check",
                "paths": {
                    "da": "/brugere/check",
                    "en": "/users/check"
                }
            },
            "confirm": {
                "route": "dime.user.confirm",
                "paths": {
                    "da": "/brugere/confirm",
                    "en": "/users/confirm"
                }
            },
            "login": {
                "route": "dime.user.login",
                "paths": {
                    "da": "/brugere/login",
                    "en": "/users/login"
                }
            },
            "logout": {
                "route": "user.logout",
                "paths": {
                    "da": "/brugere/logout",
                    "en": "/users/logout"
                }
            },
            "register": {
                "route": "dime.user.register",
                "paths": {
                    "da": "/brugere/register",
                    "en": "/users/register"
                }
            },
            "reset": {
                "route": "dime.user.reset",
                "paths": {
                    "da": "/brugere/reset",
                    "en": "/users/reset"
                }
            },
            "verify": {
                "route": "dime.user.verify",
                "paths": {
                    "da": "/brugere/verify",
                    "en": "/users/verify"
                }
            }
        }
    }
}
