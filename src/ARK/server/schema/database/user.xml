<?xml version="1.0" encoding="UTF-8"?>
<schema xmlns="http://www.concrete5.org/doctrine-xml/0.5">
  <table name="ark_user">
    <field name="id" type="integer">
      <unsigned/>
      <autoincrement/>
      <key/>
      <notnull/>
    </field>
    <field name="email" type="string" size="100">
      <notnull/>
    </field>
    <field name="password" type="string" size="255"/>
    <field name="salt" type="string" size="255">
      <notnull/>
    </field>
    <field name="roles" type="string" size="255">
      <notnull/>
    </field>
    <field name="name" type="string" size="100"/>
    <field name="time_created" type="integer">
      <unsigned/>
      <default value="0"/>
      <notnull/>
    </field>
    <field name="username" type="string" size="100"/>
    <field name="isEnabled" type="boolean">
      <default value="1"/>
      <notnull/>
    </field>
    <field name="confirmationToken" type="string" size="100"/>
    <field name="timePasswordResetRequested" type="integer">
      <unsigned/>
    </field>
    <index name="unique_email">
      <unique/>
      <col>email</col>
    </index>
    <index name="username">
      <unique/>
      <col>username</col>
    </index>
    <opt for="mysql" engine="InnoDB" collate="utf8_general_ci" charset="utf8"/>
  </table>
  <table name="ark_user_field">
    <field name="user_id" type="integer">
      <unsigned/>
      <key/>
      <notnull/>
    </field>
    <field name="attribute" type="string" size="50">
      <key/>
      <notnull/>
    </field>
    <field name="value" type="string" size="255"/>
    <opt for="mysql" engine="InnoDB" collate="utf8_general_ci" charset="utf8"/>
  </table>
</schema>
