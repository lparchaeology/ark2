{% extends layout_template  %}

{% block title %}{{ 'Email confirmation needed' | trans({}, 'messages') }}{% endblock %}

{% block content %}

    <h1>{{ 'Your account is not yet active' | trans({}, 'messages' ) }}</h1>

    <p>{{ 'An email should have been sent to you at <strong>%email%</strong> when you registered.' | trans({'%email%': email}, 'messages') | raw}}</p>

    <p>{{ 'Please click the link in that message to confirm your email address and activate your account.' | trans({}, 'messages') }}</p>

    <div style="margin: 20px 0px;">
        <form method="POST" action="{{ resendUrl }}">
            <input type="hidden" name="email" value="{{ email }}">
            <button type="submit" class="btn btn-default">{{ 'Resend the message' | trans({}, 'messages') }}</button>
        </form>
    </div>

    <p>{{ 'If you don\'t get an email within a few minutes, make sure to check your spam or junk folder. The sender is <strong>%fromAddress%</strong>.' | trans({ '%fromAddress%': fromAddress }) | raw }}</p>

{% endblock %}
