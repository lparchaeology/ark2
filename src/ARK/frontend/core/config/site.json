{
    "site": "core",
    "debug": true,
    "locale": {
        "default": "en",
        "locales": ["en"],
        "timezone": "UTC"
    },
    "spatial": {
        "driver": "mysql"
    },
    "mailer": {
        "enabled": false,
        "email": "noreply@example.com",
        "sender": "ARK (Do Not Reply)"
    },
    "file": {
        "root": "/files",
        "data": {
            "adapter": "Local",
            "path": "/data"
        },
        "cache": {
            "adapter": "Local",
            "path": "/cache"
        }
    },
    "image": {
        "driver": "gd",
        "max_image_size": 4000000,
        "presets": {
            "thumb": {"w": 100, "h": 100},
            "preview": {"w": 500, "h": 500}
        }
    },
    "view": {
        "renderer": {
            "pdf": "/usr/bin/xvfb-run /usr/bin/wkhtmltopdf",
            "image": "/usr/bin/xvfb-run /usr/bin/wkhtmltoimage"
        },
        "recaptcha": {
            "locale_key": "en",
            "enabled": false,
            "verify_host": true,
            "ajax": true
        }
    },
    "api": {
        "enable": true,
        "path": "/api/v2"
    },
    "web": {
        "enable": true,
        "frontend": "core"
    },
    "routes": {
        "/api/v2": "ARK\\Routing\\ApiControllerProvider",
        "/": "ARK\\Routing\\ViewControllerProvider"
    },
    "security": {
        "access_rules": [
            ["(^/users)", "ROLE_USER"],
            ["^/.+$", "IS_AUTHENTICATED_ANONYMOUSLY"]
        ],
        "user": {
            "admin_confirm": false,
            "verify_email": true,
            "verify_email_required": true,
            "email": "noreply@example.com",
            "sender": "ARK User Admin (Do Not Reply)",
            "reset_email_template": "user/emails/reset.txt.twig",
            "verify_email_template": "user/emails/verify.txt.twig",
            "password_strength": 2,
            "password_expiry": 0,
            "user_reset": true,
            "user_register": true,
            "reset_ttl": 86400,
            "routes": {
                "root": {
                    "paths": {
                        "en": "/users"
                    }
                },
                "target": {
                    "paths": {
                        "en": "/"
                    }
                },
                "check": {
                    "route": "user.check",
                    "paths": {
                        "en": "/users/check"
                    }
                },
                "confirm": {
                    "route": "user.confirm",
                    "paths": {
                        "en": "/users/confirm"
                    }
                },
                "login": {
                    "route": "user.login",
                    "paths": {
                        "en": "/users/login"
                    }
                },
                "logout": {
                    "route": "user.logout",
                    "paths": {
                        "en": "/users/logout"
                    }
                },
                "register": {
                    "route": "user.register",
                    "paths": {
                        "en": "/users/register"
                    }
                },
                "reset": {
                    "route": "user.reset",
                    "paths": {
                        "en": "/users/reset"
                    }
                },
                "verify": {
                    "route": "user.verify",
                    "paths": {
                        "en": "/users/verify"
                    }
                }
            }
        }
    }
}
