{
    "site": "",
    "debug": true,
    "timezone": "UTC",
    "locale": "en",
    "locales": ["en"],
    "spatial": {
        "driver": "mysql"
    },
    "file": {
        "root": "/files",
        "data": {
            "adapter": "Local",
            "path": "/data"
        },
        "cache": {
            "adapter": "Local",
            "path": "/cache"
        }
    },
    "image": {
        "driver": "gd",
        "max_image_size": 4000000,
        "presets": {
            "thumb": { "w": 100, "h": 100 },
            "preview": { "w": 500, "h": 500 }
        }
    },
    "api": {
        "enable": true,
        "path": "/api/v2"
    },
    "web": {
        "enable": true,
        "frontend": "core"
    },
    "routes": {
        "/api/v2": "ARK\\Routing\\ApiControllerProvider",
        "/": "ARK\\Routing\\ViewControllerProvider"
    },
    "security": {
        "access_rules": [
            ["(^/users)", "ROLE_USER"],
            ["^/.+$", "IS_AUTHENTICATED_ANONYMOUSLY"]
        ]
    }
}
