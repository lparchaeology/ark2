{
    "site": "",
    "debug": true,
    "timezone": "UTC",
    "locale": "en",
    "locales": ["en"],
    "spatial": "mysql",
    "image": "gd",
    "max_image_size": 4000000,
    "api": {
        "enable": true,
        "path": "/api/v2"
    },
    "web": {
        "enable": true,
        "frontend": "core"
    },
    "routes": {
        "/api/v2": "ARK\\Route\\ApiControllerProvider",
        "/": "ARK\\Route\\ViewControllerProvider"
    },
    "security": {
        "access_rules": [
            ["(^/users)", "ROLE_USER"],
            ["^/.+$", "IS_AUTHENTICATED_ANONYMOUSLY"]
        ]
    }
}
