{# Define the standard navbar block #}
{% block navbar %}
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">

            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="{{ path('homepage') }}">
                    <img src="{{ asset('/images/brand/logo.png', 'frontend') }}" alt="" width="60">
                </a>
            </div>

            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li class="active">
                        <a href="#">Dashboard</a>
                    </li>
                    <li>
                        <a href="#">Records</a>
                    </li>
                    <li>
                        <a href="#">Actions</a>
                    </li>
                    <li>
                        <a href="#">Map</a>
                    </li>
                    <li>
                        <a href="#">Admin</a>
                    </li>

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <img src={{ asset('/images/icons/user.png', 'frontend') }} alt="" width="15">
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu" role="menu">
                            {% if global.user %}
                                <li class="dropdown-header">
                                    {{ global.user.displayName }}
                                </li>
                                <li>
                                    <a href="{{ path('user') }}">
                                        <span class="glyphicon glyphicon-user"></span>
                                        {{ 'user.menu.view' | translate }}
                                    </a>
                                </li>
                                <li>
                                    <a href="{{ path('user.profile-edit') }}">
                                        <span class="glyphicon glyphicon-edit"></span>
                                        {{ 'user.menu.edit' | translate }}
                                    </a>
                                </li>
                                <li>
                                    <a href="{{ path('user.change-password') }}">
                                        <span class="glyphicon glyphicon-lock"></span>
                                        {{ 'user.menu.password' | translate }}
                                    </a>
                                </li>
                                <li>
                                    <a href="{{ path('user.list') }}">
                                        <span class="glyphicon glyphicon-list"></span>
                                        {{ 'user.menu.list' | translate }}
                                    </a>
                                </li>
                                <li>
                                    <a href="{{ path('user.logout') }}">
                                        <span class="glyphicon glyphicon-off"></span>
                                        {{ 'user.menu.logout' | translate }}
                                    </a>
                                </li>
                            {% else %}
                                <li>
                                    <a href="{{ path('user.login') }}">{{ 'user.menu.login' | translate }}</a>
                                </li>
                                <li>
                                    <a href="{{ path('user.register') }}">{{ 'user.menu.register' | translate }}</a>
                                </li>
                            {% endif %}
                        </ul>
                    </li>

                </ul>
            </div>

        </div>
    </nav>
{% endblock navbar %}
