{% extends "ark_main_layout.html.twig" %}

{% block content %}

<div class="container-fluid">

    <div class="alert alert-info" role="alert">Hey there, here's an alert...</div>

    <div class="row">
        <div class="col-md-12">
            {{ form_start(item_form) }}
            {{ form_widget(item_form) }}
            {{ form_end(item_form) }}
        </div>
    </div>
    {% if col2_forms is defined %}
        <div class="row">
            <div class="col-md-8 panel-group">
                {% for form in col1_forms %}
                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    {{ form_end(form) }}
                {% endfor %}
            </div>
            <div class="col-md-4 panel-group">
                {% for form in col2_forms %}
                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    {{ form_end(form) }}
                {% endfor %}
            </div>
        </div>
    {% else %}
        <div class="row">
            <div class="col-md-12 panel-group">
                {% for form in col1_forms %}
                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    {{ form_end(form) }}
                {% endfor %}
            </div>
        </div>
    {% endif %}
    {% if col3_forms is defined %}
        <div class="row">
            <div class="col-md-12 panel-group">
                {% for form in col3_forms %}
                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    {{ form_end(form) }}
                {% endfor %}
            </div>
        </div>
    {% endif %}
</div>

{% endblock %}
